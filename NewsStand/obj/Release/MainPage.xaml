<Page
    x:Class="NewsStand.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewsStand"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#efefef">
        
        <StackPanel Margin="0,0,0,668" Height="90">
            <TextBlock Text="News Stand" FontWeight="SemiBold" FontSize="30" Foreground="#7F7F7F" Margin="40,40,0,0"/>
        </StackPanel>
        
        <StackPanel Margin="0,100,0,0">
            <TextBlock Text="Top Stories" FontSize="20" FontWeight="SemiBold" Foreground="#7f7f7f" Margin="40,20,0,0"/>
            <Rectangle Fill="Gray" Height="300" Width="650" HorizontalAlignment="Left" Margin="40,20,0,0"/>   
        </StackPanel>
        
        <StackPanel Margin="0,500,0,0">        
            <TextBlock Text="Technology" FontWeight="SemiBold" FontSize="20" Margin="40,0,-3,0" Foreground="#7f7f7f"/>
            <Rectangle Fill="Gray" Width="200" Height="200" HorizontalAlignment="Left" Margin="40,20,0,0"/>
            <Rectangle Fill="Gray" Width="200" Height="200" HorizontalAlignment="Left" Margin="300,-200,0,0"/>

        </StackPanel>



    </Grid>
</Page>

